{
  "name": "skpr/config",
  "description": "Reads skipper configuration files.",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^8.1",
    "ext-json": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "drupal/coder": "^8.3",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^9.6",
    "staabm/annotate-pull-request-from-checkstyle": "^1.8"
  },
  "config": {
    "bin-dir": "bin",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Skpr\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Skpr\\Tests\\": "tests/"
    }
  }
}
