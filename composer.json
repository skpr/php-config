{
  "name": "skpr/config",
  "description": "Reads skipper configuration files.",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": "^7.2||^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "drupal/coder": "~8.3.12",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpunit/phpunit": "^8.5||^9.5"
  },
  "config": {
    "bin-dir": "bin",
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Skpr\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Skpr\\Tests\\": "tests/"
    }
  }
}
